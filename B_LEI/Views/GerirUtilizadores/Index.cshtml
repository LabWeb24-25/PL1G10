@model IEnumerable<B_LEI.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCriada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(userItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.DataCriada)
                </td>
                <td>
                    @Html.DisplayFor(userItem => user.Morada)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
