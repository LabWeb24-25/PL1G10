@model IEnumerable<B_LEI.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Usuários</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                    <!-- Botão de Editar -->
                    <a class="btn btn-info" href="/Admin/Gerir/Edit/@item.Id">Edit</a> |
                    <!-- Botão de Detalhes -->
                    <a class="btn btn-info" href="/Admin/Gerir/Details/@item.Id">Details</a> |
                    <!-- Botão de Excluir -->
                    <a class="btn btn-danger" href="/Admin/Gerir/Delete/@item.Id">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>

